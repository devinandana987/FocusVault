{
  "manifest_version": 3,
  "name": "FocusVault",
  "version": "1.0",
  "description": "Track study time and save highlights",

  "icons": {
    "128": "icon 1.png"
    
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications"
  ],
  

  "host_permissions": [
  "<all_urls>",
  "https://api.groq.com/*"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "action": {
    "default_popup": "index/index.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>","http://*/*","https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
